<h2>Back <%= Project.find(@project).name %></h2>
<hr />
<p>You have already backed this project for <%= @investment.confirmed_amount %>.</p>
<%= form_for(@investment) do |f| %>
	<%= f.label :intended_amount, "Amount" %>
	<%= f.number_field :intended_amount, placeholder: @investment.confirmed_amount %>
	<%= f.submit "Change Backing" %>
<% end %>
<%= link_to "Cancel Backing", "/investments/#{@investment.id}/cancel" %>