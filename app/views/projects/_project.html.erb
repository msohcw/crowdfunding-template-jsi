<div>
  <h4><%= project.name %></h4>
  <p><%= project.description %></p>
  <p>Creator: <%= project.user.name %> | Expires on: <%=project.expires %> | Target: $<%= project.target %></p>
  <p>
  <%= project.backers.count %> Backers | <%= project.raised %> raised (<%= "%.2f" % (project.raised.to_f/project.target.to_f * 100) %>%) |
	<% if current_user.investments.find_by(project_id: project.id).present? %>
		<%= link_to "Change My Backing", edit_investment_path(current_user.investments.find_by(project_id: project.id)) %>
	<% else %>
		<%= link_to "Back Project", new_investment_path(project_id: project.id) %>
	<% end %>
  </p>
</div>
<hr />